<%= form_for [post, post.comments.new] do |f| %>

  <% if post.comments.new.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.comments.new.errors.errors.count, "error") %>.</h4>
      <ul>
        <% post.comments.new.errors.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %> 

  <%= form_group_tag(post.comments.new.errors[:body]) do %>
    <%= f.label 'New Comment' %>
    <%= f.text_field :body, rows: 1, class: 'form-control', placeholder: "Enter comment" %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>